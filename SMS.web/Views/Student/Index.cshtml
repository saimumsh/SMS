@model IEnumerable<SMS.core.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

<!-- Search Form -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Search Form -->
    <form method="get" asp-action="Index" class="me-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search student by name..." />
            <button class="btn btn-info" type="submit">Search</button>
        </div>
    </form>

    <!-- Add Student Button -->
    <a asp-action="Create" class="btn btn-info">Add Student</a>
</div>

<hr />

<!-- Student Cards -->
<div class="row justify-content-center">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card text-white bg-info shadow-sm h-100">
                    <div class="card-header">
                        <h5>@item.FullName</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@item.ClassLevel.Name</h6>
                        <p class="card-text">School: Encoder Kindergarden</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-light btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger btn-sm">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-light btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No students found.
        </div>
    }
</div>
