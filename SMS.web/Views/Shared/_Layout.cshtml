<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMS.web</title>
    <link rel="stylesheet" href="~/lib/bootstrapThemes/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMS.web.styles.css" asp-append-version="true" />
    <style>
        /* Main navigation styles */
        .sidebar {
            background-color: #1f3d7a;
            color: white;
            width: 18vw;
            position: fixed; /* Fixed sidebar */
            top: 0;
            bottom: 0;
            padding: 20px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar .nav-link {
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            margin: 5px 0;
            cursor:pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .sidebar .nav-link:hover {
            background-color: #244a9f;
            color: #ffffff;
        }

        .sidebar .nav-link i {
            margin-right: 10px;
        }

        .sidebar .navbar-brand {
            font-size: 1.7rem;
            color: white;
            display: block;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        /* Main Content */
        .main-content {
            margin-left: 18vw; /* Ensure content starts after sidebar */
            width: calc(100% - 18vw); /* Fill the remaining width */
            min-height: 100vh;
            padding: 20px;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        main {
            flex: 1; /* Allow main content to expand to fill the available space */
        }

        footer {
            background-color: #e9ecef;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
        }

        footer a {
            color: #007bff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* Ensure the full height and no extra page scroll */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Sidebar responsive on small devices */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            School MS
        </a>
        <nav class="nav flex-column">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door"></i> Home
            </a>
            <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#teacherSubmenu"
                aria-expanded="false">
                <i class="bi bi-person"></i> Teacher
            </a>
            <div class="collapse submenu" id="teacherSubmenu">
                <a class="nav-link" asp-controller="Teacher" asp-action="Index" >Teacher List</a>
                <a class="nav-link" asp-controller="Teacher" asp-action="Add">Add Teacher</a>
                <a class="nav-link" href="#">Manage Teachers</a>
            </div>

            <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#studentSubmenu"
                aria-expanded="false">
                <i class="bi bi-people"></i> Student
            </a>
            <div class="collapse submenu" id="studentSubmenu">
                <a class="nav-link" asp-controller="Student" asp-action="Index">Student List</a>
                <a class="nav-link" asp-controller="Student" asp-action="Create">Add Student</a>
                <a class="nav-link" asp-controller="Student" asp-action="Index">Manage Students</a>
            </div>

            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="bi bi-shield-lock"></i> Privacy
            </a>
        </nav>
    </nav>

    <!-- Main Content Area -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
        <footer class="mt-auto">
            <div class="container">
                &copy; 2023 - SMS.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
